{
  "extends" : "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@util/*": ["src/util/*"],
      "@store/*": ["src/store/*"],
      "@net/*": ["src/net/*"],
      "@lib/*": ["src/lib/*"],
      "@feeds/*": ["src/feeds/*"],
      "@content/*": ["src/content/*"],
      "@signer/*": ["src/signer/*"],
      "@dvm/*": ["src/dvm/*"],
    },
    "outDir": "build",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["esnext", "ES2023", "dom"],
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    //"emitDeclarationOnly": false,
    "stripInternal": true,
    "strict": true,
  },
  "include": ["src/**/*.ts", "tests/**/*"],
  "exclude": ["node_modules", "tests/**/*"]
}
